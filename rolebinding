apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: bind-argocd-to-deployment-manager
  namespace: test # Must be in the same namespace as the Role
subjects:
- kind: ServiceAccount
  name: openshift-gitops-argocd-application-controller
  namespace: openshift-gitops # The namespace where the SA actually lives
roleRef:
  kind: Role
  name: deployment-manager # Name of the Role created in Step 1
  apiGroup: rbac.authorization.k8s.io
